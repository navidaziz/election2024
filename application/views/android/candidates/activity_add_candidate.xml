
<TextView
android:id="@+id/title_candidates"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceLarge"
android:text="Add"
android:textStyle="normal|bold"
android:textAlignment="center"
android:textColor="@android:color/background_light"
android:layout_centerHorizontal="true"
android:textSize="40dp" />
		
						<EditText
						android:id="@+id/name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Name"
						android:inputType="text"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/candidates"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
						<EditText
						android:id="@+id/political_party"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Political Party"
						android:inputType="text"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/name"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
						<EditText
						android:id="@+id/symbol"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Symbol"
						android:inputType="EditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/political_party"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
						<EditText
						android:id="@+id/image"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Image"
						android:inputType="EditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/symbol"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
<Button
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Add"
android:id="@+id/btn_add_candidates"
android:textColor="@android:color/background_light"
android:layout_below="@+id/image"
/>