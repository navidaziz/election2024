
<TextView
android:id="@+id/title_candidates"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceLarge"
android:text="Edit"
android:textStyle="normal|bold"
android:textAlignment="center"
android:textColor="@android:color/background_light"
android:layout_centerHorizontal="true"
android:textSize="40dp"
android:paddingTop="60dp" />
		
						<EditText
						android:id="@+id/name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Name"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/candidates"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/political_party"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Political Party"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/name"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/symbol"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Symbol"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/political_party"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/image"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Image"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/symbol"
						android:layout_marginTop="42dp"/>
						
						
<Button
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Update"
android:id="@+id/btn_update_candidates"
android:background="@xml/btnselector"
android:textColor="@android:color/background_light"
/>